{
  "name": "revere",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "scraper",
    "frontend"
  ],
  "scripts": {
    "start:backend": "npm --workspace=backend run start",
    "start:scraper": "npm --workspace=scraper run start",
    "start:frontend": "npm --workspace=frontend run start",
    "dev:backend": "npm --workspace=backend run dev",
    "dev:scraper": "npm --workspace=scraper run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:scraper\" --kill-others --names \"backend,scraper\" --prefix-colors \"blue,green\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
